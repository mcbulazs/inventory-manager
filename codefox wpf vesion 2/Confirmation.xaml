<Window
        x:Class="codefox_wpf_vesion_2.Confirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:codefox_wpf_vesion_2"
        mc:Ignorable="d"
        Title="Figyelem!" Height="150" Width="200"
        WindowStartupLocation="CenterOwner"
        >
    <Grid>
        <Button x:Name="yes" FontSize="20" Content="Igen" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Width="80" Height="30" Click="yes_Click"/>
        <Button x:Name="no" FontSize="20" Content="Nem" HorizontalAlignment="right" Margin="0,72,10,0" VerticalAlignment="Top" Width="80" Height="30" Click="no_Click" />
        <TextBlock FontSize="15" x:Name="confirmationTB" TextWrapping="Wrap" TextAlignment="Center" Text=""  VerticalAlignment="Top" Margin="0,10,0,0"/>

    </Grid>
</Window>
