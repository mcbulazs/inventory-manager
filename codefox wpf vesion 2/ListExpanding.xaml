<Window Name="ListExpandingWindow"
        x:Class="codefox_wpf_vesion_2.ListExpanding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:codefox_wpf_vesion_2"
        mc:Ignorable="d"
        Title="Figyelem!" Height="150" Width="200"
        WindowStartupLocation="CenterOwner"
        >
    <Grid>
        <Button x:Name="listExpendingBtn" Content="Lista bővítése" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Width="auto" Click="listExpendingBtn_Click"/>
        <Button x:Name="newListBtn" Content="Új lista" HorizontalAlignment="Left" Margin="107,72,0,0" VerticalAlignment="Top" Width="75" Click="newListBtn_Click"/>
        <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="A jelenlegi listát szeretnéd  bővíteni vagy új listát akarsz kezdeni?"  VerticalAlignment="Top" Margin="0,10,0,0"/>

    </Grid>
</Window>
